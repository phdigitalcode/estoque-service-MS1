echo "Ola mundo"
pipeline {
  agent {
        any {
            image 'ubuntu'
            args '-u root:sudo -v $HOME/workspace/myproject:/myproject'
        }
    }
  stages {
    stage("Fix the permission issue") {
            agent any

            steps {
                sh "sudo chown root:jenkins /run/docker.sock"
            }

        }
    stage('Build') {
      steps {
         sh './mvnw -Dmaven.test.failure.ignore=true install'
      }
    }
  }
}
